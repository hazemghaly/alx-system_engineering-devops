#!/usr/bin/env bash
#config a new Ubuntu machine nginx
apt-get -y update
apt-get -y install haproxy=1.6.\*
echo "frontend web-front
        bind *:80
        default_backend web-backend
backend web-backend
        balance roundrobin
        server 345269-web-01 54.146.89.146:80 check
        server 345269-web-02 54.236.46.208:80 check
" | sudo tee -a /etc/haproxy/haproxy.cfg
service haproxy start
